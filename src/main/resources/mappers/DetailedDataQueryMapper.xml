<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.dao.DetailedDataQueryMapper">
    <resultMap id="BaseResultMap" type="com.example.entity.RegionData">
        <!-- 用id属性来映射主键字段 -->
        <id property="id" column="id" jdbcType="INTEGER"/>
        <!-- 用result属性来映射非主键字段 -->
        <result property="zoneId" column="zone_id" jdbcType="INTEGER"/>
        <result property="waterTemperature" column="water_temperature" jdbcType="FLOAT"/>
        <result property="ph" column="ph" jdbcType="FLOAT"/>
        <result property="cod" column="cod" jdbcType="FLOAT"/>
        <result property="nh3" column="nh3" jdbcType="FLOAT"/>
        <result property="dox" column="dox" jdbcType="FLOAT"/>
        <result property="conductivity" column="conductivity" jdbcType="FLOAT"/>
        <result property="turbidity" column="turbidity" jdbcType="FLOAT"/>
        <result property="sendTime" column="send_time" jdbcType="TIMESTAMP"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, zone_id, water_temperature, ph, cod, nh3,dox, conductivity, turbidity, send_time
   </sql>
    <select id="queryAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from region_data
    </select>
    <select id="queryByCondition" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from region_data
        where zone_id=#{zoneId} and
        #{startTime} <![CDATA[ <= ]]> send_time
        and #{endTime} <![CDATA[ >= ]]> send_time
    </select>
    <select id="queryByConditionOrderBySendTimeAsc" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from region_data
        where zone_id=#{zoneId} and
        #{startTime} <![CDATA[ <= ]]> send_time
        and #{endTime} <![CDATA[ >= ]]> send_time
        order by send_time asc
    </select>
    <select id="queryByConditionOrderBySendTimeDesc" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from region_data
        where zone_id=#{zoneId} and
        #{startTime} <![CDATA[ <= ]]> send_time
        and #{endTime} <![CDATA[ >= ]]> send_time
        order by send_time desc
    </select>
    <select id="queryByConditionOrderByZoneIdAsc" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from region_data
        where zone_id=#{zoneId} and
        #{startTime} <![CDATA[ <= ]]> send_time
        and #{endTime} <![CDATA[ >= ]]> send_time
        order by zone_id asc
    </select>
    <select id="queryByConditionOrderByZoneIdDesc" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from region_data
        where zone_id=#{zoneId} and
        #{startTime} <![CDATA[ <= ]]> send_time
        and #{endTime} <![CDATA[ >= ]]> send_time
        order by zone_id desc
    </select>
</mapper>
